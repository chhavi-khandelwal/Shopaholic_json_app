<%= form_for [:admin, :product, @color] do |f| %>
  <div id='error-content'></div>  

  <table class="table color-table">
    <tbody>
      <tr>
        <th>Name<p class='mandatory'>*</p></th>
        <th>Image<p class='mandatory'>*</p></th>
        <th><p class='mandatory'>*mandatory field</p></th>
      </tr>
      <tr>
        <td>
          <%= f.text_field :name, required: true, class: 'size-text-field', id: 'color-name' %>
        </td>
        <td>
          <%= f.fields_for :images, @color.images.build do |builder| %>
            <%= render 'image_fields', :f => builder %>
          <% end %>
          <div>
            <%= link_to_add_fields "Add More", f, :images %>
          </div>
        </td>
        <td>
          <input type="submit" value="Create Color" id='color-submit'>
        </td>
      </tr>
    </tbody>
  </table>
<% end %>
