<%= form_for [:admin, @color], :html => { multipart: true} do |f| %>
  <%= render partial: '/errors', locals: { object: @color } %>

  <table class="table color-table">
    <tbody>
      <tr>
        <th>Name<p class='mandatory'>*</p></th>
        <th>Image<p class='mandatory'>*</p></th>
        <th><p class='mandatory'>*mandatory field</p></th>
        <th></th>
      </tr>
      <tr>
        <td>
          <%= f.text_field :name, required: true, class: 'size-text-field' %>
        </td>
        <td>
          <%= f.fields_for :images do |builder| %>
            <%= render 'image_fields', :f => builder %>
          <% end %>
          <div>
            <%= link_to_add_fields "Add More", f, :images %>
          </div>
        </td>
        <td>
          <%= f.submit %>
        </td>
      </tr>
    </tbody>
  </table>
<% end %>
